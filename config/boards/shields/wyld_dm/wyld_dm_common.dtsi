#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <6>;
        rows = <5>;
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)
RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5)
        >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
        row-gpios
            = <&nice_nano_v2 P1_06 GPIO_ACTIVE_HIGH>
            , <&nice_nano_v2 P1_04 GPIO_ACTIVE_HIGH>
            , <&nice_nano_v2 P0_14 GPIO_ACTIVE_HIGH> // P0_11 replaced with P0_14
            , <&nice_nano_v2 P1_00 GPIO_ACTIVE_HIGH>
            , <&nice_nano_v2 P0_24 GPIO_ACTIVE_HIGH>
            ;
    };
    
    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        triggers-per-rotation = <15>;
    };
};